<?xml version="1.0" encoding="UTF-8" ?>
<Module>
  <ModulePrefs title="Transmission Remote GUI donation" scrolling="false">
    <Require feature="dynamic-height"/>
  </ModulePrefs>
  <Content type="html">
  <![CDATA[

<head>
<base target="_parent" />
</head>

<script type="text/javascript">
function DonateClick()
{
  try {
    var v, u;
    var uShareIt = "https://secure.shareit.com/shareit/checkout.html?PRODUCT[300500153]={Q}&pts={P}";
    var uPlimus = "https://www.plimus.com/jsp/buynow.jsp?contractId=2343710&quantity={Q}";

    if (document.getElementById("donate_paypal").checked)
      u=uShareIt.replace("{P}", "PAL");
    else
    if (document.getElementById("donate_webmoney").checked)
      u=uShareIt.replace("{P}", "WMO");
    else
    if (document.getElementById("donate_cc").checked)
      u=uShareIt.replace("{P}", "CCA,CHK,WTR");
    else {
      alert("Please choose a payment option.");
      return;
    }
    if (document.getElementById("donate_5").checked)
      v="1";
    else
    if (document.getElementById("donate_10").checked)
      v="2";
    else
    if (document.getElementById("donate_15").checked)
      v="3";
    else
    if (document.getElementById("donate_20").checked)
      v="4";
    else {
      alert("Please specify a donation amount.");
      return;
    }

    window.open(u.replace("{Q}", v), "_parent");
  } catch(e) {
    alert(e.message);
  }
}
</script>
<div style="font-size:10pt;">
<div>
Donate using:
</div>
<form action="" name="donate_form">
<input type="radio" name="donate_type" value="paypal" id="donate_paypal">
  <label for="donate_paypal"><img src="http://transmisson-remote-gui.googlecode.com/svn/wiki/pp-ico.png" width=16 height=16 align=texttop> <b>PayPal</b> via ShareIt</label><br>
<input type="radio" name="donate_type" value="webmoney" id="donate_webmoney">
  <label for="donate_webmoney"><img src="http://transmisson-remote-gui.googlecode.com/svn/wiki/wm-ico.png" width=16 height=16 align=texttop> <b>WebMoney</b> via ShareIt</label><br>
<input type="radio" name="donate_type" value="plimus" id="donate_cc">
  <label for="donate_cc"><img src="http://transmisson-remote-gui.googlecode.com/svn/wiki/cc-ico.png" width=16 height=16 align=texttop> <b>Credit card/Wire transfer</b> via ShareIt</label><br>
<div>
<br>
Donation amount:
</div>
<input type="radio" name="donate_val" value="5" id="donate_5"><label for="donate_5">5 USD</label>
<input type="radio" name="donate_val" value="10" id="donate_10"><label for="donate_10">10 USD</label>
<input type="radio" name="donate_val" value="15" id="donate_15"><label for="donate_15">15 USD</label>
<input type="radio" name="donate_val" value="20" id="donate_20"><label for="donate_20">20 USD</label>
<br><br>
<input type="button" value="Donate" onclick="DonateClick();">
</form>
</div>

  ]]>
  </Content>
</Module>
